<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/opcion1_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:background="@color/opcion1_1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="@dimen/margi_extra_corto"
                android:text="@string/ingreso_lectura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:background="@color/opcion1_1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="@dimen/margi_extra_corto"
                android:text="|"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/selectObjConexion"
                android:text="@string/objeto_conexion"
                android:textColor="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/opcion1_1"
                android:paddingRight="15dp"
                android:paddingTop="@dimen/margi_extra_corto"
                android:src="@drawable/go"
                android:tint="@android:color/white" />
        </LinearLayout>


        <LinearLayout
            android:background="@color/opcion1_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/white"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/margi_extra_corto"
                android:text="@string/medidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/codMedidor" />

            <TextView
                android:id="@+id/progreso"
                android:background="@color/opcion1_1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingTop="@dimen/margi_extra_corto"
                android:paddingBottom="3dp"
                android:paddingRight="@dimen/margi_extra_corto"
                android:gravity="end"
                android:paddingLeft="@dimen/margi_extra_corto"
                android:text="3/4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:background="@color/background_2"
                android:text="RUTA"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/ruta"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:background="@color/background_2"
                android:text="AREA"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/area"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:background="@color/background_2"
                android:text="UNIDAD DE LECTURA"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/unidadLectura"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:background="@color/background_2"
                android:text="SUMENERGCALL1"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/sumEnergCall1"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:background="@color/background_2"
                android:text="PUNTO DE SUMINISTRO"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/ptoSuministro"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:background="@color/background_2"
                android:text="EMPLAZAMIENTO"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/emplazamiento"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:background="@color/background_2"
                android:text="APARATO"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/aparato"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:background="@color/background_2"
                android:text="LECTURA 1"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:id="@+id/lectura1"
                    android:padding="5dp"
                    android:hint="00000.00"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/kva"
                    android:paddingRight="@dimen/margi_extra_corto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:background="@color/background_2"
                android:text="LECTURA 2"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:id="@+id/lectura2"
                    android:padding="5dp"
                    android:hint="00000.00"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/va"
                    android:paddingRight="@dimen/margi_extra_corto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margi_extra_corto"
                android:layout_weight="1"
                android:background="@color/background_2"
                android:paddingBottom="@dimen/margi_extra_corto"
                android:paddingLeft="@dimen/margi_extra_corto"
                android:paddingTop="5dp"
                android:text="NOTAS DE LECT"
                android:textColor="@android:color/black"
                android:textStyle="bold" />


            <com.piotrek.customspinner.CustomSpinner
                android:id="@+id/notasLectura"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/white" />

        </LinearLayout>

        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

    </LinearLayout>

</ScrollView>
